<!DOCTYPE html>
<html>
<head>
  <title>BroDownThrowDown</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header navbar-left">
      <a class="navbar-brand" href="/" root>
        <%= image_tag("fist.jpeg", size: "25" ) %>
      </a>
    </div>

    <% if logged_in? %>
      <form class="navbar-form navbar-right">
          <%= link_to 'Sign Out', logout_path, method: "delete", class: "btn btn-default" %>
      </form>
    <% else %>
      <form class="navbar-form navbar-right">
            <%= link_to 'Sign Up', new_user_path, class: "btn btn-default" %>
      </form>

      <form class="navbar-form navbar-right">
            <%= link_to 'Sign In', login_path, class: "btn btn-default" %>
      </form>

    <% end %>

  </div>
</nav>

<%= yield %>



</body>
</html>
