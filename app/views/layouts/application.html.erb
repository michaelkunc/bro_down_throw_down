<!DOCTYPE html>
<html>
<head>
  <title>BroDownThrowDown</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header navbar-left">
      <%= link_to(image_tag("fist.jpeg", size: "25" ), root_path, class: "navbar-brand") %>
    </div>

    <%= form_tag search_users_path, method: 'get', class:"navbar-form navbar-left", role: 'search' do %>
      <div class="form-group">
        <%= text_field_tag :query, params[:query], placeholder: 'Find a fighter or a style', class: "form-control"  %>
      </div>
        <%= submit_tag "Go fight", class: 'btn btn-default' %>
    <% end %>



    <% if logged_in? %>
      <div class="navbar-form navbar-right">
        <%= link_to 'Profile', current_user, class: "btn btn-default" %>
      </div>
      <div class="navbar-form navbar-right">
        <%= link_to 'Sign Out', logout_path, method: "delete", class: "btn btn-default" %>
      </div>
    <% else %>
      <div class="navbar-form navbar-right">
        <%= link_to 'Sign Up', new_user_path, class: "btn btn-default" %>
      </div>
      <div class="navbar-form navbar-right">
        <%= link_to 'Sign In', login_path, class: "btn btn-default" %>
      </div>
    <% end %>

  </div>
</nav>

<%= yield %>

</body>
</html>
