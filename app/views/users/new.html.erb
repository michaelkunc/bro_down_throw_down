<h1>Are you ready to throw down...bro?</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for :user, url: users_path, method: "post" do |f| %>
      <%= f.text_field :username, placeholder:"username", class: "form-control" %>
      <%= f.text_field :email, placeholder:"email", class: "form-control" %>
      <%= f.password_field :password, placeholder: "password", class: "form-control" %>
      <%= f.text_area :bio, placeholder: "bio", class: "form-control" %>
      <%= f.text_field :image_url, placeholder: "image", class: "form-control" %>

      <%= f.submit "Become new user, bro", class: "btn btn-primary"%>
    <% end %>

    <% link_to "home, bro", root_path %>

  </div>
</div>
